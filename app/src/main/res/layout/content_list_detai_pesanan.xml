<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/makanan_jumlah"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        tools:text="1"
        android:layout_marginTop="@dimen/dimen_medium_8dp"
        android:textSize="@dimen/text_size_medium_16sp"
        android:layout_marginStart="@dimen/dimen_medium_8dp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="@string/txt_aksen_x"
        android:layout_marginTop="@dimen/dimen_medium_8dp"
        android:textSize="@dimen/text_size_medium_16sp"
        android:layout_marginStart="@dimen/dimen_medium_8dp"/>

    <TextView
        android:id="@+id/makanan_nama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        tools:text="Gudeg Djogja"
        android:layout_marginTop="@dimen/dimen_medium_8dp"
        android:textSize="@dimen/text_size_medium_16sp"
        android:layout_marginStart="@dimen/dimen_medium_8dp"/>

    <TextView
        android:id="@+id/makanan_harga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        tools:text="Rp. 120.000"
        android:layout_marginTop="@dimen/dimen_medium_8dp"
        android:textSize="@dimen/text_size_medium_16sp"
        android:layout_marginStart="@dimen/dimen_medium_8dp"/>


</LinearLayout>